<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/rlSearchDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvSearchDonor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="My Details"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/purple_700"
                android:textStyle="italic|bold"/>


            <LinearLayout
                android:id="@+id/llName"
                android:layout_below="@+id/tvSearchDonor"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textAlignment="gravity"

                    />

                <EditText
                    android:id="@+id/etDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llGender"
                android:layout_below="@+id/llName"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etRegName"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        />

                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="20sp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBloodGroup"
                android:layout_below="@+id/llGender"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tvBloodGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group "
                    android:textSize="25sp"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    />

                <Spinner
                    android:id="@+id/myDetailsSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/white"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContactNo"
                android:layout_below="@+id/llBloodGroup"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/tvContactNo"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:text="Contact No "
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/etDetailMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginRight="10sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_below="@+id/llContactNo"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:text="Address "
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/etDetailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCity"
                android:layout_below="@+id/llAddress"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:text="City "
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:gravity="end"
                    android:textAlignment="textEnd"
                    />

                <EditText
                    android:id="@+id/etDetailCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llCheckBox"
                android:layout_below="@id/llCity"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <CheckBox
                    android:id="@+id/checkboxDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="I want to be a Donor"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_below="@id/progressBar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:text="Update"
                android:textSize="20sp"
                android:padding="7dp"
                android:onClick="toUpdateUser"
                android:backgroundTint="@color/purple_700"/>

            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_below="@+id/llCheckBox"
                style="?android:attr/progressBarStyle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>